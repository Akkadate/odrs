{
  "name": "odrs",
  "version": "1.0.0",
  "description": "Online Document Request System",
  "main": "server/src/index.js",
  "scripts": {
    "server": "nodemon server/src/index.js",
    "client": "cd client && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:sqlite": "concurrently \"USE_SQLITE=true nodemon server/src/index.js\" \"cd client && npm start\"",
    "start": "node server/src/index.js",
    "start:sqlite": "USE_SQLITE=true node server/src/index.js",
    "start:init": "node init-server.js",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "jest",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "seed": "SEED_DATABASE=true node server/src/utils/seeder.js"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "pg": "^8.10.0",
    "sequelize": "^6.31.0",
    "sqlite3": "^5.1.7",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}
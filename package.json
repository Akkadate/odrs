{
  "name": "odrs",
  "version": "1.0.0",
  "description": "Online Document Request System",
  "main": "server/src/index.js",
  "scripts": {
    "server": "nodemon server/src/index.js",
    "client": "cd client && npm start",
    "client:static": "cd client && npm run start:static",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:sqlite": "concurrently \"USE_SQLITE=true nodemon server/src/index.js\" \"cd client && npm start\"",
    "dev:static": "concurrently \"npm run static-server\" \"npm run client:static\"",
    "start": "node server/src/index.js",
    "start:sqlite": "USE_SQLITE=true node server/src/index.js",
    "start:init": "node init-server.js",
    "static-server": "node server-static-5003.js",
    "build": "cd client && npm run build",
    "build:static": "cd client && npm run build:static",
    "install-all": "npm install && cd client && npm install && cd ../server && npm install",
    "test": "jest",
    "lint": "eslint \"**/*.{js,jsx}\"",
    "seed": "SEED_DATABASE=true node server/src/utils/seeder.js",
    "db:test": "node test-db-connection.js",
    "db:install-deps": "./install-db-deps.sh",
    "db:setup": "./setup-database.sh",
    "db:migrate": "cd server && npm run db:migrate",
    "db:seed": "cd server && npm run db:seed",
    "db:reset": "cd server && npm run db:reset",
    "db:reset-all": "./reset-database.sh",
    "db:seed-users": "node seed-users.js",
    "test:login": "node test-login.js",
    "debug:login": "./debug-login.sh"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.1",
    "pg": "^8.14.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.31.0",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  }
}
